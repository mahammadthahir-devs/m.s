  <div class="games-container">
    <!-- Game 1: Love Quiz -->
    <div class="game" id="game1">
      <h2>Love Memory Quiz</h2>
      <p>What was the date of our very first message? (Format: Month DD)</p>
      <input type="text" id="answer1" placeholder="e.g. October 18" />
      <button onclick="checkLoveQuiz()">Check Answer</button>
      <div class="result" id="result1"></div>
    </div>

    <!-- Game 2: Heart Catcher (Simple Click Game) -->
    <div class="game" id="game2">
      <h2>Heart Catcher</h2>
      <p>Catch as many hearts as you can in 15 seconds! Tap the hearts before they disappear.</p>
      <button onclick="startHeartGame()" id="startHeartBtn">Start Game</button>
      <div style="position:relative; height:130px; margin-top: 10px;" id="heartGround"></div>
      <div class="result" id="result2"></div>
    </div>

    <!-- Game 3: Love Words Scramble -->
    <div class="game" id="game3">
      <h2>Love Words Scramble</h2>
      <p>Unscramble this word: <strong>VOREL</strong></p>
      <input type="text" id="answer3" placeholder="Your guess here" />
      <button onclick="checkScramble()">Submit</button>
      <div class="result" id="result3"></div>
    </div>
  </div>

  <script>
    // Game 1: Love Quiz
    function checkLoveQuiz() {
      const correctAnswer = 'october 18';
      let input = document.getElementById('answer1').value.trim().toLowerCase();
      let result = document.getElementById('result1');
      if (input === correctAnswer) {
        result.textContent = 'Right! You remember our special day ❤️';
        result.style.color = '#ff9086';
      } else {
        result.textContent = 'Not quite, try again or share a kiss for a hint!';
        result.style.color = '#f28ab2';
      }
    }

    // Game 2: Heart Catcher
    let heartTimer, heartInterval, heartsCaught = 0;

    function startHeartGame() {
      const ground = document.getElementById('heartGround');
      const result = document.getElementById('result2');
      heartsCaught = 0;
      ground.innerHTML = '';
      result.textContent = '';
      document.getElementById('startHeartBtn').disabled = true;

      function createHeart() {
        const heart = document.createElement('div');
        heart.textContent = '♥';
        heart.style.position = 'absolute';
        heart.style.fontSize = '28px';
        heart.style.color = '#ff5c8a';
        heart.style.userSelect = 'none';
        // Position randomly in ground
        heart.style.top = Math.random() * 90 + 'px';
        heart.style.left = Math.random() * 280 + 'px';
        heart.style.cursor = 'pointer';
        ground.appendChild(heart);

        heart.onclick = () => {
          heartsCaught++;
          ground.removeChild(heart);
          result.textContent = `Hearts caught: ${heartsCaught}`;
          result.style.color = '#ffe6f0';
        };

        setTimeout(() => {
          if (ground.contains(heart)) {
            ground.removeChild(heart);
          }
        }, 1400);
      }

      heartInterval = setInterval(createHeart, 600);

      heartTimer = setTimeout(() => {
        clearInterval(heartInterval);
        document.getElementById('startHeartBtn').disabled = false;
        result.textContent += ` - Game Over! You caught ${heartsCaught} hearts.`;
        result.style.color = '#ffafbd';
      }, 15000);
    }

    // Game 3: Love Words Scramble
    function checkScramble() {
      const correctWord = 'lover';
      let input = document.getElementById('answer3').value.trim().toLowerCase();
      let result = document.getElementById('result3');
      if (input === correctWord) {
        result.textContent = 'Correct! Love always wins ❤️';
        result.style.color = '#ff8aad';
      } else {
        result.textContent = 'Not quite, try again!';
        result.style.color = '#f28ab2';
      }
    }
  </script>
